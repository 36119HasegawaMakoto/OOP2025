<Window x:Class="TenkiApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="お天気アプリ 🌈" Height="810" Width="1200"
        Background="#FFF5F8FA" ResizeMode="CanResize"
        Closing="Window_Closing">
    <Window.Resources>
        <!-- 可愛いコンボボックススタイル -->
        <Style x:Key="RoundedComboBox" TargetType="ComboBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Yu Gothic UI"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#FF6B9BD6"/>
            <Setter Property="BorderBrush" Value="#FFB0D4FF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Padding" Value="12,8"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="FontFamily" Value="Yu Gothic UI"/>
                        <Setter Property="Foreground" Value="#FF6B9BD6"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ComboBoxItem">
                                    <Border Background="{TemplateBinding Background}"
                                            Padding="{TemplateBinding Padding}"
                                            CornerRadius="8"
                                            Margin="4,2">
                                        <ContentPresenter ContentTemplate="{TemplateBinding ContentTemplate}"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFEFF8FF"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#FFD4EDFF"/>
                                <Setter Property="Foreground" Value="#FF5FA3D9"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="#FFCCE5FF"
                                    BorderThickness="2"
                                    CornerRadius="12"
                                    Padding="{TemplateBinding Padding}">
                                <Border.Effect>
                                    <DropShadowEffect Color="#FFCCCCCC" Direction="315" ShadowDepth="2" Opacity="0.2" BlurRadius="5"/>
                                </Border.Effect>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <ContentPresenter Grid.Column="0"
                                                    Content="{TemplateBinding SelectionBoxItem}"
                                                    ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Left"
                                                    Margin="5,0,0,0"/>
                                    <ToggleButton Grid.Column="1"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Focusable="False"
                                                IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                ClickMode="Press">
                                        <Path Data="M 0 0 L 4 4 L 8 0 Z"
                                              Fill="#FF9FD6FF"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="5,0,5,0"/>
                                    </ToggleButton>
                                </Grid>
                            </Border>
                            <Popup IsOpen="{TemplateBinding IsDropDownOpen}"
                                   Placement="Bottom"
                                   AllowsTransparency="True">
                                <Border Background="White"
                                        BorderBrush="#FFCCE5FF"
                                        BorderThickness="2"
                                        CornerRadius="12"
                                        Margin="0,5,0,0"
                                        MaxHeight="200"
                                        MinWidth="{TemplateBinding ActualWidth}">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#FFCCCCCC" Direction="315" ShadowDepth="3" Opacity="0.3" BlurRadius="8"/>
                                    </Border.Effect>
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ComboBoxItem">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Yu Gothic UI"/>
            <Setter Property="Foreground" Value="#FF6B9BD6"/>
        </Style>

        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Yu Gothic UI"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Background" Value="#FF9FD6FF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF7BA3D9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="WeatherCard" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FFFFEEF5" Offset="0"/>
                        <GradientStop Color="#FFE6F3FF" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#FFD4A5FF"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#FFCCCCCC" Direction="315" ShadowDepth="3" Opacity="0.3" BlurRadius="10"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DayCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#FFCCE5FF"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#FFCCCCCC" Direction="315" ShadowDepth="2" Opacity="0.2" BlurRadius="5"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 左側: 選択エリア -->
        <StackPanel Grid.Column="0" Margin="0,0,15,0">
            <!-- タイトル -->
            <Border Margin="0,0,0,15" 
                    Background="#FF9FD6FF" 
                    CornerRadius="15" 
                    Padding="12,8">
                <TextBlock Text="🌞 お天気チェック 🌈" 
                           FontSize="22" 
                           FontWeight="Bold" 
                           FontFamily="Yu Gothic UI"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           TextAlignment="Center">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#FF5FA3D9" Direction="315" ShadowDepth="2" Opacity="0.5" BlurRadius="4"/>
                    </TextBlock.Effect>
                </TextBlock>
            </Border>

            <!-- 現在位置ボタン -->
            <Button Content="📍 現在地の天気を取得" 
                    Style="{StaticResource RoundedButton}"
                    Click="BtnCurrentLocation_Click"
                    Margin="0,0,0,15"/>

            <!-- お気に入りリスト -->
            <Border Style="{StaticResource WeatherCard}" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="⭐ お気に入り" 
                               FontSize="16" 
                               FontWeight="SemiBold" 
                               FontFamily="Yu Gothic UI"
                               Foreground="#FF6B9BD6"
                               Margin="0,0,0,8"/>
                    <ListBox x:Name="LstFavorites"
                             Height="120"
                             BorderThickness="0"
                             Background="Transparent"
                             SelectionChanged="LstFavorites_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding}" Margin="0,0,10,0"/>
                                    <Button Content="×" 
                                            FontSize="16"
                                            FontWeight="Bold"
                                            Background="Transparent"
                                            Foreground="#FFFF6B9D"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            Click="BtnRemoveFavorite_Click"
                                            Tag="{Binding}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Border>

            <!-- 選択エリア -->
            <Border Style="{StaticResource WeatherCard}">
                <StackPanel>
                    <TextBlock Text="📍 都道府県" 
                               FontSize="14" 
                               FontWeight="SemiBold" 
                               FontFamily="Yu Gothic UI"
                               Foreground="#FF6B9BD6"
                               Margin="0,0,0,8"/>
                    <ComboBox x:Name="CmbPref" 
                              Style="{StaticResource RoundedComboBox}"
                              SelectionChanged="CmbPref_SelectionChanged"
                              Margin="0,0,0,12">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" 
                                           FontSize="14"
                                           FontFamily="Yu Gothic UI"
                                           Foreground="#FF6B9BD6"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <TextBlock Text="🏘️ 市町村" 
                               FontSize="14" 
                               FontWeight="SemiBold" 
                               FontFamily="Yu Gothic UI"
                               Foreground="#FF6B9BD6"
                               Margin="0,0,0,8"/>
                    <ComboBox x:Name="CmbCity" 
                              Style="{StaticResource RoundedComboBox}"
                              SelectionChanged="CmbCity_SelectionChanged"
                              Margin="0,0,0,12">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" 
                                           FontSize="14"
                                           FontFamily="Yu Gothic UI"
                                           Foreground="#FF6B9BD6"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <Button Content="⭐ お気に入りに追加" 
                            Style="{StaticResource RoundedButton}"
                            Background="#FFFFB6C1"
                            Click="BtnAddFavorite_Click"/>
                </StackPanel>
            </Border>

            <!-- 現在の天気 -->
            <Border Style="{StaticResource WeatherCard}" Margin="0,15,0,0">
                <StackPanel>
                    <TextBlock Text="現在の天気" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               FontFamily="Yu Gothic UI"
                               Foreground="#FF7BA3D9"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>

                    <TextBlock x:Name="TxtWeather" 
                               FontSize="32" 
                               FontWeight="Bold"
                               FontFamily="Yu Gothic UI"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               Foreground="#FF5FA3D9"
                               Margin="0,0,0,10"/>

                    <TextBlock x:Name="TxtTemp" 
                               FontSize="28" 
                               FontWeight="Bold"
                               FontFamily="Yu Gothic UI"
                               Foreground="#FFFF8BA7"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,8"/>

                    <TextBlock x:Name="TxtWind" 
                               FontSize="16"
                               FontFamily="Yu Gothic UI"
                               Foreground="#FF9FD6FF"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,8"/>

                    <TextBlock x:Name="TxtTime" 
                               FontSize="12"
                               FontFamily="Yu Gothic UI"
                               FontStyle="Italic"
                               Foreground="#FFAAAAAA"
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- 右側: 週間天気 -->
        <Border Grid.Column="1" Style="{StaticResource WeatherCard}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="📅 週間天気予報" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               FontFamily="Yu Gothic UI"
                               Foreground="#FF7BA3D9"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>

                    <ItemsControl x:Name="WeeklyForecast">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="1"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource DayCard}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" 
                                                   Text="{Binding Date}" 
                                                   FontSize="16"
                                                   FontWeight="SemiBold"
                                                   FontFamily="Yu Gothic UI"
                                                   Foreground="#FF6B9BD6"
                                                   VerticalAlignment="Center"/>

                                        <TextBlock Grid.Column="1" 
                                                   Text="{Binding WeatherEmoji}" 
                                                   FontSize="32"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>

                                        <TextBlock Grid.Column="2" 
                                                   Text="{Binding Description}" 
                                                   FontSize="14"
                                                   FontFamily="Yu Gothic UI"
                                                   Foreground="#FF666666"
                                                   VerticalAlignment="Center"
                                                   Margin="10,0"/>

                                        <StackPanel Grid.Column="3" 
                                                    Orientation="Horizontal" 
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Center">
                                            <TextBlock Text="最高: " 
                                                       FontSize="14"
                                                       Foreground="#FFFF6B6B"/>
                                            <TextBlock Text="{Binding MaxTemp}" 
                                                       FontSize="16"
                                                       FontWeight="Bold"
                                                       Foreground="#FFFF6B6B"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="4" 
                                                    Orientation="Horizontal" 
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Center">
                                            <TextBlock Text="最低: " 
                                                       FontSize="14"
                                                       Foreground="#FF6B9BD6"/>
                                            <TextBlock Text="{Binding MinTemp}" 
                                                       FontSize="16"
                                                       FontWeight="Bold"
                                                       Foreground="#FF6B9BD6"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- ローディングオーバーレイ -->
        <Grid x:Name="LoadingOverlay" 
              Grid.ColumnSpan="2" 
              Background="#99FFFFFF" 
              Visibility="Collapsed">
            <Border Background="White" 
                    CornerRadius="20" 
                    Padding="30,20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect Color="#FFCCCCCC" Direction="315" ShadowDepth="5" Opacity="0.4" BlurRadius="15"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="🌤️" 
                               FontSize="48" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10">
                        <TextBlock.RenderTransform>
                            <RotateTransform x:Name="LoadingRotation" CenterX="24" CenterY="24"/>
                        </TextBlock.RenderTransform>
                        <TextBlock.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetName="LoadingRotation"
                                                       Storyboard.TargetProperty="Angle"
                                                       From="0" To="360" Duration="0:0:2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </TextBlock.Triggers>
                    </TextBlock>
                    <TextBlock Text="読み込み中..." 
                               FontSize="16" 
                               FontFamily="Yu Gothic UI"
                               FontWeight="SemiBold"
                               Foreground="#FF7BA3D9"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>