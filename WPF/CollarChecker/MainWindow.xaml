<Window x:Class="CollarChecker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CollarChecker"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="colorArea" Margin="10" Background="Black"/>
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!--ここから追加-->
            <TextBlock Grid.Column="0" Grid.Row="0" Text="Ｒ" FontSize="30"
                       HorizontalAlignment="Center" VerticalAlignment="Center" />
            <Slider x:Name="rSlider" Grid.Row="0" Grid.Column="1" 
                    Maximum="255"  VerticalAlignment="Center" IsSnapToTickEnabled="True" ValueChanged="Slider_ValueChanged"/>
            <TextBox x:Name="rValue" Grid.Row="0" Grid.Column="2" 
                     VerticalAlignment="Center" FontSize="20" 
                     Text="{Binding ElementName=rSlider, Path=Value, Mode=TwoWay}"/>

            <TextBlock Grid.Column="0" Grid.Row="1" Text="Ｇ" FontSize="30"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Slider x:Name="gSlider" Grid.Row="1" Grid.Column="1" 
                    Maximum="255"  VerticalAlignment="Center" IsSnapToTickEnabled="True" ValueChanged="Slider_ValueChanged"/>
            <TextBox x:Name="gValue" Grid.Row="1" Grid.Column="2" 
                     VerticalAlignment="Center" FontSize="20"
                     Text="{Binding ElementName=gSlider, Path=Value, Mode=TwoWay}"/>

            <TextBlock Grid.Column="0" Grid.Row="2" Text="Ｂ" FontSize="30"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Slider x:Name="bSlider" Grid.Row="2" Grid.Column="1" 
                    Maximum="255"  VerticalAlignment="Center" IsSnapToTickEnabled="True" ValueChanged="Slider_ValueChanged"/>
            <TextBox x:Name="bValue" Grid.Row="2" Grid.Column="2" 
                     VerticalAlignment="Center" FontSize="20"
                     Text="{Binding ElementName=bSlider, Path=Value, Mode=TwoWay}"/>


            <ComboBox x:Name="colorSelectComboBox" Grid.Row="3" Grid.ColumnSpan="3" 
                      HorizontalAlignment="Center" VerticalAlignment="Center" Width="186"
                      SelectionChanged="colorSelectComboBox_SelectionChanged">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Border Width="20" Height="Auto" Margin="5,0" BorderThickness="1" BorderBrush="Black"  >
                            <Border.Background>
                                <SolidColorBrush Color="{Binding Color}"/>
                            </Border.Background>
                        </Border>
                        <TextBlock Text="{Binding Name}"></TextBlock>
                    </StackPanel>
                </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </Grid>
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="4*"/>
                
                
            </Grid.RowDefinitions>
            <!--ここから追加-->
            <Button Content="STOCK" HorizontalAlignment="Center"
                    VerticalAlignment="Center" Width="213" Height="27" Click="StockButton_Click"/>
            <ListBox x:Name="stockList" Grid.Row="2" d:ItemsSource="{d:SampleData ItemCount=0}"/>
            
            <Button Content="DELETE" HorizontalAlignment="Left"  
                    Grid.Row="1" VerticalAlignment="Center" Width="100" Click="DeleteButton_Click"/>
            <Button Content="REFLECTION" HorizontalAlignment="Right"  
                Grid.Row="1" VerticalAlignment="Center" Width="100" Click="RefrextButton_Click"/>
            

        </Grid>

    </Grid>
</Window>
