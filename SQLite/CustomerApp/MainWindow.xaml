<Window x:Class="CustomerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomerApp" 
        mc:Ignorable="d"
        Title="顧客管理アプリケーション"  Width="520" Height="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" VerticalAlignment="Top" Margin="5" >
            <StackPanel Orientation="Horizontal">
                <Label Content="名前:" Width="60" />
                <TextBox x:Name="NameBox" Width="180" Height="20"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" >
                <Label Content="電話番号:" Width="60" />
                <TextBox x:Name="PhoneBox" Width="180" Height="20"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" >
                <Label Content="住所:" Width="60" />
                <TextBox x:Name="BasyoBox" Width="180" Height="20"/>
            </StackPanel>
            <Button  Content="画像の選択" x:Name="PictureButton" Click="PictureButton_Click"/>
            <Image Name="PicturePreview" Width="180" Height="150" Stretch="Uniform"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" >
                <Button x:Name="Save" Content="追加" Width="60" Margin="0,0,10,0" Click="Save_Click" />
                <Button x:Name="Update" Content="更新" Width="60" Margin="0,0,10,0" Click="Update_Click" />
                <Button x:Name="Delete" Content="削除" Width="60" Click="Delete_Click" />
            </StackPanel>
        </StackPanel>
        <ScrollViewer Grid.Column="1" Margin="10">
            <ItemsControl x:Name="CustomerList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,0,0,10">
                            <DockPanel>
                                <Image Source="{Binding PictureImage}" Width="80" Height="80" Margin="10,0,0,0" DockPanel.Dock="Right"/>
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Phone}" />
                                    <TextBlock Text="{Binding Address}" />
                                </StackPanel>
                            </DockPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>


    </Grid>
</Window>
